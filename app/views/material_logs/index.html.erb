<div class='mb-5 mt-3'>
  <h1>Movimentações de estoque</h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @logs.human_attribute_name(:movimentado_em) %></th>
      <th><%= @logs.human_attribute_name(:usuário) %></th>
      <th><%= @logs.human_attribute_name(:produto) %></th>
      <th><%= @logs.human_attribute_name(:quantidade) %></th>
      <th><%= @logs.human_attribute_name(:status) %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody class="col-span-12">
    <% if @logs.any?%>
      <% @logs.each do |log| %>
        <tr>
          <td><%= log.created_at.strftime('%d/%m/%Y') %></td>
          <td><%= log.user.full_name || log.user.email %></td>
          <td><%= log.material.name %></td>
          <td><%= log.quantity %></td>
          <td><%= log.translate_status %></td>
          <td></td>
        </tr>
      <% end %>
    <% else %>
      <td> Sem movimentações por aqui.</td>
    <% end %>
  </tbody>
</table>